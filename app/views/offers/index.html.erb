<h1>Offers#index</h1>

<p>
  <%= link_to('New', new_offer_path) %>
</p>

<ul>
  <% Offer.all.each do |o| %>
    <li>Offer <%= o.grade %>, <%= o.price %> x <%= o.quantity %> (<%= o.season %>) <%= link_to('Edit', edit_offer_path(o.id)) %> | <%= link_to('Delete', offer_path(o.id), method: :delete, data: { confirm: 'Are you sure to delete?' }) %></li>
  <% end %>
</ul>
